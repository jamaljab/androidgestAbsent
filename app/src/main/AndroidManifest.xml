<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.miniprojett">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Miniprojett"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        tools:targetApi="31">

        <activity
            android:name=".activities.DisplayClassesActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Miniprojett">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CreateClassActivity"
            android:label="CreateClassActivity" />

        <activity
            android:name=".activities.CreateStudentActivity"
            android:label="CreateStudentActivity" />

        <activity
            android:name=".activities.DisplayStudentsActivity"
            android:label="CreateStudentActivity" />

        <activity android:name=".activities.StudentDetailActivity"/>
        <activity android:name=".activities.AbsenceListActivity" />
    </application>

</manifest>
